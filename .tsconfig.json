{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "strict": true,
    "incremental":true,
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "esModuleInterop": true, 
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src/**/*"]
}